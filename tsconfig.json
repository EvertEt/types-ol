{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "*": [
        "@types/*",
        "node_modules/@types/*"
      ]
    },
    "target": "es5"
  },
  "include": [
    "test/**/*.ts",
    "@types/**/*.d.ts"
  ]
}
